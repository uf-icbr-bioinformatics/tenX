#!/bin/bash

#SBATCH --time=30:00:00
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=8
#SBATCH --mem-per-cpu=16G

## Call cellranger aggr
## arg1 = Output directory
## arg2 = Sample sheet
## arg3 = Reference dir

module purge
module load cellranger-atac

cellranger-atac aggr --id=$1 --csv=$2 --reference=$3 --localcores=8

